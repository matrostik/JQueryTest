@{ Layout = null; }

<!DOCTYPE html>
<html>
<head>
	<meta name="viewport" content="width=device-width" />
	<title>File Upload MVC 4</title>
	<link href="~/Content/bootstrap/bootstrap.min.css" rel="stylesheet" />
	<link href="~/Content/bootstrap/bootstrap-theme.min.css" rel="stylesheet" />
	<link href="~/Content/jquery.fileupload.css" rel="stylesheet" />
	<script src="~/Scripts/jquery-1.9.1.min.js"></script>
	<script src="~/Scripts/jquery.ui.widget.js"></script>
	<script src="~/Scripts/bootstrap.min.js"></script>
	<script src="~/Scripts/jquery.fileupload.js"></script>

<script type="text/javascript">
	$(document).ready(function () {
		$('#fileupload').fileupload({
			dataType: 'json',
			url: '/Home/UploadFiles',
			autoUpload: true,
			done: function (e, data) {
				$('.file_name').html(data.result.name);
				$('.file_type').html(data.result.type);
				$('.file_size').html(data.result.size);
				$('.file_url').html(data.result.url);
			}
		})
	});
</script>
</head>
<body>
	<div class="container">
		<span class="btn btn-success fileinput-button">
			<i class="glyphicon glyphicon-plus"></i>
			<span>Add files...</span>
            <input id="fileupload" type="file" name="files[]" accept="image/x-png, image/gif, image/jpeg">
		</span>
		<br />
		<div class="file_name"></div>
		<br />
		<div class="file_type"></div>
		<br />
		<div class="file_size"></div>
        <div class="file_url"></div>
	</div>
</body>
</html>
